<section class="cart py-16">
  <% if (session.cart && session.cart.totalQty) { %>
  <!-- order cart -->
  <div class="order container mx-auto w-1/2">
    <div class="flex items-center border-b border-gray-300 pb-4">
      <img src="/img/cart-black.png" alt="cart-black" />
      <h2 class="font-bold ml-4 text-2xl">Order Summary</h2>
    </div>
    <div class="pizza-list border-b border-gray-300">
      <% Object.values(session.cart.items).forEach((pizza) => { %>
      <div class="list-group flex items-center justify-between my-8">
        <div class="flex items-center flex-1">
          <img class="w-24" src="/img/<%= pizza.item.image %>" alt="pizza" />
          <div class="ml-4">
            <h2><%= pizza.item.name %></h2>
            <span class="size text-xs uppercase"><%= pizza.item.size %></span>
          </div>
        </div>
        <!-- quantity counter start -->
        <div class="custom-number-input h-10 w-full ml-16 flex-1">
          <div class="flex flex-row h-10 w-3/5 rounded-lg relative bg-transparent mt-1">
            <button data-action="decrement"
              class=" bg-gray-300 text-gray-600 hover:text-gray-700 hover:bg-gray-400 h-full w-20 rounded-l cursor-pointer outline-none">
              <span class="m-auto text-2xl font-thin">−</span>
            </button>
            <input type="number"
              class="focus:ring-transparent focus:outline-none text-center w-full bg-gray-200  font-semibold text-md hover:text-black focus:text-black  md:text-basecursor-default flex items-center text-gray-700  outline-none"
              name="custom-input-number" value="<%= pizza.qty %>" min="1"></input>
            <button data-action="increment"
              class="bg-gray-300 text-gray-600 hover:text-gray-700 hover:bg-gray-400 h-full w-20 rounded-r cursor-pointer">
              <span class="m-auto text-2xl font-thin">+</span>
            </button>
          </div>
        </div>
        <!-- quantity counter end -->
        <span class="flex-1">৳<%= pizza.item.price %></span>
        <span class="font-bold text-lg flex-1">৳<%= pizza.qty * pizza.item.price %></span>
        <span class="cursor-pointer font-bold text-xl text-orange-500 hover:text-orange-700">x</span>
      </div>
      <% }) %>
    </div>



    <div class="text-right py-4">
      <div>
        <span class="text-lg font-bold">Total Amount:</span>
        <span class="amount text-2xl font-bold ml-2">৳<%= session.cart.totalPrice %></span>
      </div>
      <% if (user) { %>
      <div class="mt-12 shiping-info">
        <form class="">
          <input class="
          border border-gray-400
          p-2
          w-1/2
          mb-4
          rounded-lg
          focus:outline-none focus:ring-transparent
        " type="text" placeholder="Mobile Number" />
          <input class="
          border border-gray-400
          p-2
          w-1/2
          rounded-lg
          focus:outline-none focus:ring-transparent
        " type="text" placeholder="Address" />

          <div>
            <button type="submit" class="
            btn-primary
            font-bold
            text-white
            py-2
            px-6
            rounded-full
            mt-6
          ">
              Order Now
            </button>
          </div>
        </form>
      </div>
      <% } else { %>
      <a href="/login" class="
      inline-block
      btn-primary
      font-bold
      text-white
      py-2
      px-6
      rounded-full
      mt-6
    ">Login to continue</a>
      <% } %>
    </div>

  </div>
  <% } else { %>
  <!-- empty cart -->
  <div class="empty-cart container mx-auto text-center py-16">
    <h1 class="text-3xl font-bold mb-3">Cart Empty</h1>
    <p class="text-gray-500 text-lg mb-12">
      You probably haven't ordered a pizza yet. <br />
      To order a pizza, go to the main page.
    </p>
    <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart" />
    <button class="px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">
      <a href="/">Go back</a>
    </button>
  </div>
  <% } %>
</section>
