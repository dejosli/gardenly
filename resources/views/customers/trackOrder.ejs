<section class="status">
  <div class="container mx-auto">
    <div class="status-box w-2/3 mx-auto pt-16">
      <div class="flex items-center justify-between mb-12">
        <h1 class="text-xl font-bold">Track Delivery Status</h1>
        <h6 class="text-xs bg-white rounded-full px-4 py-1 text-green-600">
          <%= order._id %>
          <input id="hiddenStatus" type="hidden" value="<%= order.status %>" />
        </h6>
      </div>
      <div>
        <ul>
          <li class="status_line text-lg pb-14" data-status="order_placed">
            <span>Order Placed</span>
          </li>
          <li class="status_line text-lg pb-14" data-status="confirmed">
            <span>Order Confirmation</span>
          </li>
          <li class="status_line text-lg pb-14" data-status="prepared">
            <span>Preparation</span>
          </li>
          <li class="status_line text-lg pb-14" data-status="delivered">
            <span>Out for Delivery</span>
          </li>
          <li class="status_line text-lg" data-status="completed">
            <span>Complete</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>
